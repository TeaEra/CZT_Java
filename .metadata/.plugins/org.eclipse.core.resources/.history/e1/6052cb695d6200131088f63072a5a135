package czt.learn.LeetCode;

public class Pow {
	
    public static double pow(double x, int n) {
        if (n < 0) {
        	return 1 / pow(x, 0-n);
        }
        if (n == 0) {
        	return 1.0;
        }
    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		System.out.println(Pow.pow(2.0, 4));
	}

}
