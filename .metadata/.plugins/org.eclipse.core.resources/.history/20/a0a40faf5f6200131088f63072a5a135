package czt.learn.LeetCode;

public class RomanNumeral {
    
	public static String intToRoman(int num) {
        
		int rem = num;
        StringBuffer sb = new StringBuffer();
		while (rem > 0) {
        	if (rem >= 1000) {
        		sb.append("M");
        		rem -= 1000;
        	}
        	else if (rem >= 500) {
        		sb.append("D");
        		rem -= 500;
        	}
        	else if (rem >= 100) {
        		sb.append("C");
        		rem -= 100;
        	}
        	else if (rem >= 50) {
        		sb.append("L");
        		rem -= 50;
        	}
        	else if (rem >= 10) {
        		sb.append("X");
        		rem -= 10;
        	}
        	else if (rem >= 5) {
        		sb.append("V");
        	}
        	else if (rem >= 1) {
        		sb.append("I");
        	}
        }
		
		return null;
    }

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		RomanNumeral.intToRoman(1600);
	}

}
